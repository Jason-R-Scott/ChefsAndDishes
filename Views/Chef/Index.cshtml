@using ChefsAndDishes.Models
@model IEnumerable<Chef>

@{
ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <meta http-equiv='X-UA-compatible' content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
    crossorigin="anonymous">
  <title>Chefs</title>
  <style>

    #top, #top h1, #top h1 a, #top a {
      display: inline-block;
    }

    #top {
      width: 90%;
      margin-left: 5%;
      margin-right: 5%;
    }

    #top h1 {
      margin-left: 30%;
      margin-right: 30%;
      width: 300px;
    }
    
  </style>
</head>

<body>
  <div id="top">
    <h1>Chefs | <a href="dishes">Dishes</a></h1>
    <a href="/newchef" class="btn btn-success">Add Chef</a>
  </div>
  <br><br>
  <h2>Check out our roster of Chefs!</h2>
  <br>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Total Dishes</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var chef in @Model)
      {
      <tr>
        <td>@chef.FirstName @chef.LastName</td>
        <td>@chef.Age</td>
        <td>@chef.Dishes.Count</td>
      </tr>
      }
    </tbody>
  </table>


</body>